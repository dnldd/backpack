<dnldd.backpack.view.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_height_target">

            </View>

            <!-- populate the scroll view views/fragments in here -->
            <!-- <View style="@style/Item.Top" /> -->

        </LinearLayout>

        <!-- this view is either the sticky view or the quick return view, change as needed, maintain the name however -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:id="@+id/priority"/>

    </FrameLayout>

</dnldd.backpack.view.ObservableScrollView>
