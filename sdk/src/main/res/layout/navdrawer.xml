<dnldd.backpack.view.ScrimInsetsScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/nav_drawer_width"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/navdrawer"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    app:scrim_insetForeground="@color/scrim_insets_foreground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/chosen_account_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_chosen_account_height"
            android:foreground="?android:selectableItemBackground">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"
                android:tint="@color/black_alpha_54"
                android:id="@+id/profile_cover_image" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/left_phone_keyline"
                android:paddingStart="@dimen/left_phone_keyline"
                android:paddingRight="@dimen/right_phone_keyline"
                android:paddingEnd="@dimen/right_phone_keyline"
                android:paddingTop="@dimen/right_phone_keyline"
                android:id="@+id/chosen_account_content_view">

                <dnldd.backpack.view.BezelImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/nav_drawer_profile_image_size"
                    android:layout_height="@dimen/nav_drawer_profile_image_size"
                    android:src="@drawable/img"
                    android:scaleType="centerCrop"
                    app:maskDrawable="@drawable/circle_mask" />

                <dnldd.backpack.view.TextView
                    android:id="@+id/profile_email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/profile_image"
                    android:layout_alignStart="@id/profile_image"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/left_phone_keyline"
                    app:fontStyle="regular"
                    android:textSize="@dimen/body_one_textsize"
                    android:textColor="@color/body_text_2_inverse"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="donald.adu@gmail.com"
                    android:ellipsize="end" />

                <dnldd.backpack.view.TextView
                    android:id="@+id/profile_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/profile_email_text"
                    android:layout_alignLeft="@id/profile_image"
                    android:layout_alignStart="@id/profile_image"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/body_text_1_inverse"
                    android:maxLines="1"
                    android:text="Donald Adu-Poku"
                    app:fontStyle="regular"
                    android:singleLine="true"
                    android:ellipsize="end" />

            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Drawer items -->
            <LinearLayout
                android:id="@+id/navdrawer_items_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" />
        </FrameLayout>
    </LinearLayout>

</dnldd.backpack.view.ScrimInsetsScrollView>