<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Spec" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryDark">@color/pink_900</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Spec.Transition" parent=""/>
    <style name="Spec.Widget" parent=""/>

    <style name="Transition.LeftInRightOut" parent="Spec.Transition">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="Transition.FadeInFadeOut" parent="Spec.Transition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Transition.UpInDownOut" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Spec.Button" parent="Spec.Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize"> @dimen/abc_text_size_button_material</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:minWidth">@dimen/abc_action_button_min_width_material</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontStyle">light</item>
    </style>

    <style name="Spec.EditText" parent="Spec.Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize"> @dimen/abc_text_size_body_1_material</item>
        <item name="android:paddingTop">@dimen/textfield_vertical_padding</item>
        <item name="android:dividerPadding">@dimen/textfield_divider_padding</item>
        <item name="android:paddingBottom">@dimen/textfield_vertical_padding</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="fontStyle">regular</item>
    </style>

    <style name="Spec.TextView" parent="Spec.Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize"> @dimen/abc_text_size_body_1_material</item>
        <item name="android:paddingTop">@dimen/textfield_divider_padding</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/no_dimension</item>
        <item name="android:dividerPadding">@dimen/textfield_divider_padding</item>
        <item name="android:paddingBottom">@dimen/textfield_vertical_padding</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="fontStyle">regular</item>
    </style>

    <style name="Spec.FloatingTextField" parent="Spec.Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
        <item name="android:paddingTop">@dimen/textfield_divider_padding</item>
        <item name="android:dividerPadding">@dimen/textfield_divider_padding</item>
        <item name="android:paddingBottom">@dimen/textfield_vertical_padding</item>
        <item name="fontStyle">regular</item>
    </style>

    <style name="Spec.NavTextView" parent="Spec.Widget">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="fontStyle">regular</item>
        <item name="android:textSize">@dimen/body_one_textsize</item>
    </style>

    <style name="Spec.RootView" parent="Spec.Widget">
        <item name="android:layout_marginLeft">@dimen/left_phone_keyline</item>
        <item name="android:layout_marginRight">@dimen/right_phone_keyline</item>
    </style>

    <style name="Spec.FloatingLabel" parent="Spec.Widget">
        <item name="floatTextColor">@color/blue_500</item>
        <item name="fontStyle">regular</item>
    </style>
    
    <style name="Spec.List" parent="Spec.Widget">
        <item name="android:paddingTop">@dimen/textfield_divider_padding</item>
    </style>

    <style name="Spec.ToolbarMobileLandscape">
        <item name="android:height">@dimen/toolbar_mobile_landscape_size</item>
    </style>

    <style name="Spec.ToolbarMobilePortrait">
        <item name="android:height">@dimen/toolbar_mobile_portrait_size</item>
    </style>

    <style name="Spec.ToolbarTab">
        <item name="android:height">@dimen/toolbar_tab_size</item>
    </style>

    <style name="Spec.PageIndicator">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/indicator_normal</item>
    </style>
</resources>
