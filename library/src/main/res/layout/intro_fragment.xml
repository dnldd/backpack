<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/meteor"
        android:scaleType="centerCrop"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_info"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/button_padding"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/left_phone_keyline"
        android:layout_marginStart="@dimen/left_phone_keyline"
        android:layout_marginRight="@dimen/right_phone_keyline"
        android:layout_marginEnd="@dimen/left_phone_keyline"
        android:background="@color/black_alpha_20">
        <dnldd.backpack.view.TextView
            style="@style/Spec.TextView"
            android:id="@+id/intro_header"
            android:textSize="@dimen/headline_textsize"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:fontStyle="regular"
            android:layout_marginBottom="@dimen/no_dimension"
            android:text="Meteors From The Sky"
            android:textColor="@color/white"/>
        <dnldd.backpack.view.TextView
            style="@style/Spec.TextView"
            android:layout_width="450dp"
            android:id="@+id/intro_caption"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_dimension"
            android:text="When such an object enters the Earth's atmosphere at a speed typically in excess of 20 km/s, aerodynamic heating produces a streak of light, both from the glowing object and the trail of glowing particles that it leaves in its wake. This phenomenon is called a meteor, or colloquially a shooting star or falling star. A series of many meteors appearing seconds or minutes apart, and appearing to originate from the same fixed point in the sky, is called a meteor shower."
            android:textColor="@color/white"/>
        </LinearLayout>
</RelativeLayout>