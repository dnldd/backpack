<dnldd.backpack.view.progressbar.SmoothProgressBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:padding="0dp"
    android:indeterminate="true"
    android:layout_margin="0dp"
    app:spb_sections_count="4"
    app:spb_color="@color/black_alpha_54"
    app:spb_speed="0.9"
    app:spb_interpolator="spb_interpolator_acceleratedecelerate"
    app:spb_stroke_width="8dp"
    app:spb_stroke_separator_length="4dp"
    app:spb_reversed="false"
    app:spb_mirror_mode="false"
    app:spb_progressiveStart_activated="true"
    app:spb_progressiveStart_speed="0.9"
    app:spb_progressiveStop_speed="2.4"
    />